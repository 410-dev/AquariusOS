#!/usr/bin/env bash

_services_completion() {
    local cur prev ids
    COMPREPLY=()

    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"

    local commands="enable disable restart status logs journal name list"

    # First argument: subcommand
    if [[ $COMP_CWORD -eq 1 ]]; then
        COMPREPLY=( $(compgen -W "${commands}" -- "$cur") )
        return 0
    fi

    # Dynamic <id> completion for commands requiring ID
    case "${COMP_WORDS[1]}" in
        enable|disable|restart|status|logs|journal|name)
            ids="$("${COMP_WORDS[0]}" list 2>/dev/null)"
            COMPREPLY=( $(compgen -W "${ids}" -- "$cur") )
            return 0
            ;;
    esac
}

# Bind completion to both valid command names
complete -F _services_completion services services.sh
